<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
  </head>

  <body class="body">
    
    <% if flash[:alert] %>
     <div class="alert">
      <%= flash[:alert] %>
      
    <% elsif flash[:notice] %>   
      <div class="notice">
      <%= flash[:notice] %>
    <% end %>
    
      </div>
    
     
      <div class="nav">
        <div class="nav__icon"></div>
        <h1 class="nav__title"> <b> Smart Home </b> </h1>
        <div class="nav__list-button"></div>

            
        <div class="nav__list list">
          <div class="list__item">
            <a class="list__link" href="/home">Strona główna</a>
          </div>
          
          <div class="list__item">
            <a class="list__link" href="/home/new">Dodaj urządzenie</a>
          </div>
          
          <div class="list__item">
            <a class="list__link" href="/info">O aplikacji</a>
          </div>
        </div>
      </div>
      
    <%= yield %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
